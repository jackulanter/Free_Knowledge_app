class BuildinAPI {
  constructor(token) {
    this.token = token;
    this.baseUrl = 'https://api.buildin.ai';
  }

  // Get current user
  async getMe() {
    const response = await fetch(`${this.baseUrl}/v1/users/me`, {
      method: 'GET',
      headers: {
        'Authorization': `Bearer ${this.token}`,
        'Content-Type': 'application/json'
      }
    });

    if (!response.ok) {
      throw new Error(`API Error: ${response.status}`);
    }
    
    return await response.json();
  }

  // Create a new page
  async createPage(title, content, type = 'doc') {
    const response = await fetch(`${this.baseUrl}/v1/pages`, {
      method: 'POST',
      headers: {
        'Authorization': `Bearer ${this.token}`,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        title,
        content,
        type
      })
    });

    if (!response.ok) {
      const error = await response.json();
      throw new Error(error.error?.message || `API Error: ${response.status}`);
    }
    
    return await response.json();
  }

  // Get page by ID
  async getPage(pageId) {
    const response = await fetch(`${this.baseUrl}/v1/pages/${pageId}`, {
      method: 'GET',
      headers: {
        'Authorization': `Bearer ${this.token}`,
        'Content-Type': 'application/json'
      }
    });

    if (!response.ok) {
      throw new Error(`API Error: ${response.status}`);
    }
    
    return await response.json();
  }

  // Update page
  async updatePage(pageId, updates) {
    const response = await fetch(`${this.baseUrl}/v1/pages/${pageId}`, {
      method: 'PATCH',
      headers: {
        'Authorization': `Bearer ${this.token}`,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(updates)
    });

    if (!response.ok) {
      throw new Error(`API Error: ${response.status}`);
    }
    
    return await response.json();
  }

  // Delete page
  async deletePage(pageId) {
    const response = await fetch(`${this.baseUrl}/v1/pages/${pageId}`, {
      method: 'DELETE',
      headers: {
        'Authorization': `Bearer ${this.token}`,
        'Content-Type': 'application/json'
      }
    });

    if (!response.ok) {
      throw new Error(`API Error: ${response.status}`);
    }
    
    return response.status === 204;
  }
}

// Export singleton instance
let apiInstance = null;
export const getAPI = (token) => {
  if (!apiInstance && token) {
    apiInstance = new BuildinAPI(token);
  }
  return apiInstance;
};

export default BuildinAPI;
