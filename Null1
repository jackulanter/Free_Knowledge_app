import React, { useState, useEffect } from 'react'

export default function Editor() {
  const [content, setContent] = useState("Start writing here...")
  const [isLoading, setIsLoading] = useState(false)
  const [error, setError] = useState(null)

  // Save content to API
  const saveContent = async () => {
    if (!content.trim()) return
    
    setIsLoading(true)
    setError(null)
    
    try {
      const response = await fetch('https://api.buildin.ai/v1/pages', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${process.env.REACT_APP_API_TOKEN}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          title: 'My Document',
          content: content,
          type: 'doc'
        })
      })

      if (!response.ok) {
        throw new Error(`API Error: ${response.status}`)
      }

      const data = await response.json()
      console.log('Page created:', data)
    } catch (err) {
      setError(err.message)
      console.error('Save failed:', err)
    } finally {
      setIsLoading(false)
    }
  }

  // Auto-save every 30 seconds
  useEffect(() => {
    const interval = setInterval(() => {
      if (content && !isLoading) {
        saveContent()
      }
    }, 30000)

    return () => clearInterval(interval)
  }, [content, isLoading])

  return (
    <div className="border rounded-lg p-4 bg-gray-50 min-h-96">
      <div className="flex justify-between items-center mb-2">
        <span className="text-sm text-gray-600">Editor</span>
        {isLoading ? (
          <span className="text-xs text-blue-600">Saving...</span>
        ) : (
          <button
            onClick={saveContent}
            className="text-xs bg-blue-600 text-white px-2 py-1 rounded hover:bg-blue-700 transition"
          >
            Save Now
          </button>
        )}
      </div>
      
      {error && (
        <div className="mb-2 p-2 text-xs text-red-600 bg-red-50 rounded">
          {error}
        </div>
      )}
      
      <textarea
        value={content}
        onChange={(e) => setContent(e.target.value)}
        className="w-full h-80 p-3 border-none outline-none resize-none bg-transparent text-sm"
        placeholder="Start writing here..."
      />
      
      <div className="text-right mt-2">
        <span className="text-xs text-gray-400">{content.length} characters</span>
      </div>
    </div>
  )
}
