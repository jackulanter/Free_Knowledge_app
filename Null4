import React, { useState, useEffect } from 'react'
import BuildinAPI from '../lib/api'

export default function AIPanel() {
  const [query, setQuery] = useState('')
  const [response, setResponse] = useState('')
  const [isLoading, setIsLoading] = useState(false)
  const [error, setError] = useState(null)
  const [api, setApi] = useState(null)

  useEffect(() => {
    // Initialize API with token from environment or localStorage
    const token = process.env.REACT_APP_API_TOKEN || localStorage.getItem('api_token')
    if (token) {
      setApi(new BuildinAPI(token))
    }
  }, [])

  const askAI = async () => {
    if (!query.trim() || !api) return
    
    setIsLoading(true)
    setError(null)
    
    try {
      // In a real app, this would call an AI endpoint
      // For now, we'll simulate a response
      const simulatedResponse = await simulateAIResponse(query)
      setResponse(simulatedResponse)
    } catch (err) {
      setError(err.message)
    } finally {
      setIsLoading(false)
    }
  }

  const simulateAIResponse = (query) => {
    // Simulate API delay
    return new Promise((resolve) => {
      setTimeout(() => {
        resolve(`I've analyzed your request about "${query}" and can help you with document management, database relations, and formula calculations. This is a simulated response showing how the AI would assist you in a real implementation.`)
      }, 1500)
    })
  }

  const handleKeyPress = (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault()
      askAI()
    }
  }

  return (
    <div className="bg-white border rounded-lg p-4 shadow-sm">
      <h3 className="font-semibold mb-3">AI Assistant</h3>
      
      {!api && (
        <div className="mb-3 p-2 text-xs text-yellow-600 bg-yellow-50 rounded">
          API not configured. Please set REACT_APP_API_TOKEN environment variable.
        </div>
      )}
      
      <div className="space-y-2">
        <textarea
          value={query}
          onChange={(e) => setQuery(e.target.value)}
          onKeyPress={handleKeyPress}
          placeholder="Ask me anything about your documents..."
          className="w-full p-2 text-sm border rounded resize-none h-20 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
        
        <button 
          onClick={askAI}
          disabled={isLoading || !query.trim() || !api}
          className="flex items-center justify-center w-full text-xs bg-blue-600 text-white px-3 py-2 rounded hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition"
        >
          {isLoading ? (
            <>
              <svg className="animate-spin -ml-1 mr-2 h-3 w-3 text-white" fill="none" viewBox="0 0 24 24">
                <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Thinking...
            </>
          ) : "Ask AI"}
        </button>
      </div>
      
      {error && (
        <div className="mt-3 p-2 text-xs text-red-600 bg-red-50 rounded">
          {error}
        </div>
      )}
      
      {response && (
        <div className="mt-3 p-3 text-sm text-gray-700 bg-gray-50 rounded border-l-4 border-blue-500">
          {response}
        </div>
      )}
    </div>
  )
}
