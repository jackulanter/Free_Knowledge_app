import React from 'react'
import ReactDOM from 'react-dom/client'
import App from './App'
import './index.css'

// Set API token (in production, this would come from environment variables or auth flow)
if (process.env.REACT_APP_API_TOKEN) {
  localStorage.setItem('api_token', process.env.REACT_APP_API_TOKEN)
}

ReactDOM.createRoot(document.getElementById('root')).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
)
